<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:RentApp.Controls"
    x:Class="RentApp.Views.Session.LoginPage"
    xmlns:prism="http://prismlibrary.com"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView
            VerticalScrollBarVisibility="Never">
            <StackLayout
                VerticalOptions="Center">
                <StackLayout>
                    <Image
                        Source="logo"/>
                </StackLayout>
                <StackLayout
                    Padding="30,0">
                    <controls:CanvasView
                        Elevation="2"
                        CornerRadius="10"
                        BackgroundColor="White">
                        <controls:CanvasView.Padding>
                            <OnPlatform x:TypeArguments="Thickness" 
                                Android="10,0" 
                                iOS="10"/>
                        </controls:CanvasView.Padding>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Source="ic_email"/>
                            <Entry
                                PlaceholderColor="#EDEDED"
                                Placeholder="Correo"
                                TextColor="Black"
                                Text="{Binding Email}"
                                Grid.Column="1">
                                <Entry.FontSize>
                                    <OnPlatform x:TypeArguments="x:Double"
                                        Android="15" 
                                        iOS="20"/>
                                </Entry.FontSize>
                            </Entry>
                        </Grid>
                    </controls:CanvasView>
                </StackLayout>
                <StackLayout
                    Margin="0,10"
                    Padding="30,0">
                    <controls:CanvasView
                        Elevation="2"
                        CornerRadius="10"
                        BackgroundColor="White">
                        <controls:CanvasView.Padding>
                            <OnPlatform x:TypeArguments="Thickness" 
                                Android="10,0" 
                                iOS="10"/>
                        </controls:CanvasView.Padding>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Source="ic_password"/>
                            <Entry
                                IsPassword="{Binding IsPassword}"
                                PlaceholderColor="#EDEDED"
                                Placeholder="Contraseña"
                                TextColor="Black"
                                Text="{Binding Password}"
                                Grid.Column="1">
                                <Entry.FontSize>
                                    <OnPlatform x:TypeArguments="x:Double"
                                        Android="15" 
                                        iOS="20"/>
                                </Entry.FontSize>
                            </Entry>
                            <Image
                                Grid.Column="2"
                                Source="{Binding Img}">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TapImgCommand}"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </Grid>
                    </controls:CanvasView>
                </StackLayout>
                <StackLayout
                    Margin="0,10"
                    Padding="30,0">
                    <controls:CustomButton
                        IsCapital="False"
                        Command="{Binding LogInCommand}"
                        Text="Iniciar Sesion"
                        TextColor="Black"
                        BackgroundColor="White"
                        BorderWidth="2"
                        BorderColor="Black"
                        CornerRadius="0">
                        <controls:CustomButton.FontSize>
                            <OnPlatform x:TypeArguments="x:Double"
                                Android="15" 
                                iOS="20"/>
                        </controls:CustomButton.FontSize>
                    </controls:CustomButton>
                </StackLayout>
                <StackLayout
                    HorizontalOptions="Center">
                    <Grid
                        Padding="5"
                        ColumnSpacing="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <controls:CanvasView
                            Grid.Column="0"
                            Elevation="2"
                            Padding="15"
                            CornerRadius="30"
                            BackgroundColor="White">
                            <Image
                                HeightRequest="30"                
                                Source="facebook"/>
                        </controls:CanvasView>
                        <controls:CanvasView
                            Grid.Column="1"
                            Elevation="2"
                            Padding="15"
                            CornerRadius="30"
                            BackgroundColor="White">
                            <Image
                                HeightRequest="30"                
                                Source="facebook"/>
                        </controls:CanvasView>
                    </Grid>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
