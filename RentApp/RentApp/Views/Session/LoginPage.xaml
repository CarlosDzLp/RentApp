<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="RentApp.Views.Session.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:RentApp.Controls"
    xmlns:font="clr-namespace:RentApp.Font"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="True"
    BackgroundColor="White"
    NavigationPage.BackButtonTitle="">
    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Never">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" BackgroundColor="#F4364C">
                    <StackLayout VerticalOptions="CenterAndExpand">
                        <Image HeightRequest="100" Source="rentapp.jpg" />
                    </StackLayout>
                </StackLayout>
                <StackLayout Grid.Row="1" Padding="0,20,0,0">
                    <StackLayout Padding="30,0">
                        <controls:CanvasView
                            BackgroundColor="White"
                            BorderColor="{Binding ColorEmail}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Elevation="0">
                            <controls:CanvasView.Padding>
                                <OnPlatform
                                    x:TypeArguments="Thickness"
                                    Android="10,5"
                                    iOS="10,12" />
                            </controls:CanvasView.Padding>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="1">
                                    <Image.Source>
                                        <FontImageSource
                                            FontFamily="LightPro"
                                            Glyph="{x:Static font:FontAwesomeIcons.Email}"
                                            Size="20"
                                            Color="{Binding ColorEmail}" />
                                    </Image.Source>
                                </Image>
                                <Entry
                                    x:Name="entryemail"
                                    Grid.Column="0"
                                    Placeholder="Correo"
                                    PlaceholderColor="Gray"
                                    Text="{Binding Email}"
                                    TextColor="Black">
                                    <Entry.FontSize>
                                        <OnPlatform
                                            x:TypeArguments="x:Double"
                                            Android="18"
                                            iOS="20" />
                                    </Entry.FontSize>
                                </Entry>
                            </Grid>
                        </controls:CanvasView>
                    </StackLayout>
                    <StackLayout Margin="0,10" Padding="30,0">
                        <controls:CanvasView
                            BackgroundColor="White"
                            BorderColor="{Binding ColorPassword}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Elevation="0">
                            <controls:CanvasView.Padding>
                                <OnPlatform
                                    x:TypeArguments="Thickness"
                                    Android="10,5"
                                    iOS="10,12" />
                            </controls:CanvasView.Padding>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Entry
                                    Grid.Column="0"
                                    IsPassword="True"
                                    Placeholder="Contraseña"
                                    PlaceholderColor="Gray"
                                    Text="{Binding Password}"
                                    TextColor="Black">
                                    <Entry.FontSize>
                                        <OnPlatform
                                            x:TypeArguments="x:Double"
                                            Android="18"
                                            iOS="20" />
                                    </Entry.FontSize>
                                </Entry>
                                <Image Grid.Column="1">
                                    <Image.Source>
                                        <FontImageSource
                                            FontFamily="LightPro"
                                            Glyph="{x:Static font:FontAwesomeIcons.Lock}"
                                            Size="20"
                                            Color="{Binding ColorPassword}" />
                                    </Image.Source>
                                </Image>
                            </Grid>
                        </controls:CanvasView>
                    </StackLayout>
                    <StackLayout Margin="0,10" Padding="30,0">
                        <Button
                            Padding="0,15"
                            BackgroundColor="#F4364C"
                            Command="{Binding LogInCommand}"
                            CornerRadius="10"
                            Text="Iniciar Sesion"
                            TextColor="White">
                            <Button.FontSize>
                                <OnPlatform
                                    x:TypeArguments="x:Double"
                                    Android="18"
                                    iOS="20" />
                            </Button.FontSize>
                        </Button>
                    </StackLayout>
                    <StackLayout Padding="0,0,30,20" HorizontalOptions="End">
                        <Label
                            FontSize="Default"
                            Text="Olvido Contraseña?"
                            TextColor="#F4364C"
                            TextDecorations="Underline" />
                    </StackLayout>
                    <StackLayout>
                        <Grid Padding="30,0,30,20" ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <controls:CanvasView
                                Grid.Column="0"
                                Padding="15,15"
                                BackgroundColor="#F4364C"
                                BorderColor="#F4364C"
                                BorderDrawingStyle="Inside"
                                BorderThickness="1"
                                CornerRadius="10"
                                Elevation="0">
                                <Grid HorizontalOptions="Center" VerticalOptions="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0">
                                        <Image.Source>
                                            <FontImageSource
                                                FontFamily="Brands"
                                                Glyph="{x:Static font:FontAwesomeIcons.Facebook}"
                                                Size="20"
                                                Color="White" />
                                        </Image.Source>
                                    </Image>
                                    <Label
                                        Grid.Column="1"
                                        Text="Facebook"
                                        TextColor="White"
                                        VerticalOptions="Center" />
                                </Grid>
                            </controls:CanvasView>
                            <controls:CanvasView
                                Grid.Column="1"
                                Padding="15,10"
                                BackgroundColor="White"
                                BorderColor="#F4364C"
                                BorderDrawingStyle="Inside"
                                BorderThickness="1"
                                CornerRadius="10"
                                Elevation="0">
                                <Grid HorizontalOptions="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0">
                                        <Image.Source>
                                            <FontImageSource
                                                FontFamily="Brands"
                                                Glyph="{x:Static font:FontAwesomeIcons.Google}"
                                                Size="20"
                                                Color="#F4364C" />
                                        </Image.Source>
                                    </Image>
                                    <Label
                                        Grid.Column="1"
                                        Text="Google"
                                        TextColor="#F4364C"
                                        VerticalOptions="Center" />
                                </Grid>
                            </controls:CanvasView>
                        </Grid>
                    </StackLayout>
                    <StackLayout Padding="30,0,30,10" VerticalOptions="End">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackLayout Grid.Column="0" VerticalOptions="Center">
                                <BoxView HeightRequest="1" Color="LightGray" />
                            </StackLayout>
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                Text="O"
                                TextColor="Gray" />
                            <StackLayout Grid.Column="2" VerticalOptions="Center">
                                <BoxView HeightRequest="1" Color="LightGray" />
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                    <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                        <Label
                            FontSize="Default"
                            Text="¿Nuevo?"
                            TextColor="Black" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="Default"
                            Text="Registrate Aqui"
                            TextColor="#F4364C">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding RegisterCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
